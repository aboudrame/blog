@model blog.Models.Blog

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-12" style="padding: 0;">
        <img src="~/images/sunset.jpg" style="width: 100%;"/>
    </div>
</div>
<h1>Create a new post</h1>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Author" class="form-control" value="@User.Identity.Name" />
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label"></label>
                <textarea asp-for="Body" class="form-control"> </textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>

            @await Html.PartialAsync("_CodeEditor")

            <div class="form-group submit">
                <input type="submit" value="Post a blog" class="btn btn-primary submit" />
            </div>

        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
