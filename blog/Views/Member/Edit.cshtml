@model blog.Models.Blog

@{
    ViewData["Title"] = "Edit";
}

<div class="banner-container">
    <h1 class="banner-text-container margin15 txtaligncenter"><span class="banner-text">Blog Editor</span></h1>
    <img src="~/images/sunset.jpg" class="width100" />
</div>
<form asp-action="Edit">
    <div class="row">
        <div class="col-12">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BlogId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control"  />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Author" class="form-control" type="hidden"/>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Posted" class="form-control" type="hidden"/>
                <span asp-validation-for="Posted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label"></label>
                @await Html.PartialAsync("_CodeInstructionPartial")
                <textarea asp-for="Body" class="form-control get-preview"> </textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>

            <div class="form-group edit-preview preview">
                <h4 style="text-align: center;">PREVIEW</h4>
                <div class="preview-container">
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            @Html.ActionLink("Back to List", "Index", "Member", null, new { @class = "btn btn-primary" })
        </div>
        <div class="col-md-4 txtaligncenter">
            @Html.ActionLink("Test The Code", "CodeTester", "CodeEditor", null, new { @class="btn btn-primary"})
        </div>
        <div class="form-group submit col-md-4">
            <input type="submit" value="SAVE" class="btn btn-primary submit" />
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}