@model blog.ViewModels.RegisterCommentViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="banner-container">
    <h1 class="banner-text-container margin15 txtaligncenter"><span class="banner-text">Post a Comment</span></h1>
    <img src="~/images/comment.jpg" class="fullwidth" />
</div>

<form asp-action="Create">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 form-group">
            <h4><pre>@Model.BlogTitle</pre></h4>
            <span asp-validation-for="BlogTitle" class="text-danger"></span>
        </div>

        <div class="col-12 marginBottom15 hidden">
            @Html.TextAreaFor(y => Model.BlogBody, new { @class = "fullwidth get-preview" })
        </div>

        <div class="preview">
            <div class="teaser preview-container">
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-12 paddingTop15">
            @await Html.PartialAsync("_CodeInstructionPartial")
            @Html.TextAreaFor(x => x.CommentBody, new { @class = "fullwidth minhgt300 get-preview" })
            <span asp-validation-for="CommentBody" class="text-danger"></span>
        </div>

        @*<div class="form-group">

            <label asp-for="CommentBody" class="control-label"></label>

            <textarea asp-for="CommentBody" class="form-control"></textarea>
            <span asp-validation-for="CommentBody" class="text-danger"></span>
        </div>*@
        <div class="preview">
            <h4 style="text-align: center;">PREVIEW</h4>
            <div class="preview-container">
            </div>
        </div>


        <div class="col-12">
            <input type="hidden" asp-for="BlogId" class="form-control" />
            <span asp-validation-for="BlogId" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
        <div class="col-md-6">
            <input type="submit" value="Reply" class="btn btn-primary" />
        </div>
    </div>
</form>

