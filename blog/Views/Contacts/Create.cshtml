@model blog.Models.Contact

@{
    ViewData["Title"] = "Create";
}


<div class="banner-container">
    <h1 class="banner-text-container margin15 txtaligncenter"><span class="banner-text">Contact form</span></h1>
    <img src="~/images/f1.jpeg" class="fullwidth" />
</div>


<form asp-action="Create">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label"></label>
                <textarea asp-for="Body" class="form-control"> </textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Home</a>
        </div>
        <div class="col-md-6 txtalignright">
            <input type="submit" value="SEND" class="btn btn-primary" />
        </div>
    </div>
</form>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

