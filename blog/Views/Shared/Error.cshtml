@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="banner-container">
    <h1 class="banner-text-container margin15 txtaligncenter"><span class="banner-text">OOPS! Something goes wrong</span></h1>
    <img src="~/images/sunset.jpg" class="fullwidth" />
</div>

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<p>
   Go home @Html.ActionLink("here", "Index", "Home") or @Html.ActionLink("report", "Create", "Contacts") the issue. <br />
   Sorry for any inconveniences.
</p>

