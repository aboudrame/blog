@model blog.ViewModels.AddToRoleViewModel

@{
    ViewData["Title"] = "Add user to a role";
}

<h1>@ViewData["Title"]</h1>


    @ViewBag.S

<form method="POST">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId"></label>
                @Html.DropDownListFor(x => x.UserId, new SelectList(Model.identityUsers, "Id", "UserName"), "Select an User")
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId"></label>
                @*<input asp-for="RoleName" class="form-control" />*@
                @Html.DropDownListFor(x => x.RoleId, new SelectList(Model.identityRoles, "Id", "Name"), "Select a Role")
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-12" style="text-align: center;">
            <button type="submit" class="btn btn-primary">Add to role</button>
        </div>
    </div>
</form>
 

